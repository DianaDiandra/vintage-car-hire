<div class="container mt-5">
  <div class="row">

    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <%= cl_image_tag @car.image.key, class: "card-img-top", height: 400, width: 600, crop: :fill %>
        <div class="card-body">
          <h1 class="card-title display-4"><%= @car.brand %></h1>
          <p class="lead text-muted"><%= @car.description %></p>
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="text-primary">Â£<%= @car.price %>/day</h4>
            <%= link_to "Book Now", "#", class: "btn btn-lg btn-success" %>
          </div>
        </div>
      </div>

      <div class="mt-5">
        <h3 class="mb-4 border-bottom pb-2">
          <i class="fas fa-comments"></i>
          Customer Reviews
          <span class="badge bg-primary"><%= @car.reviews.count %></span>
        </h3>

        <div class="list-group">
          <% @car.reviews.each do |review| %>
            <div class="list-group-item mb-3 rounded shadow-sm">
              <div class="d-flex justify-content-between">
                <div>
                  <% review.rating.times do %>
                    <i class="fas fa-star text-warning"></i>
                  <% end %>
                  <% (5 - review.rating).times do %>
                    <i class="far fa-star text-warning"></i>
                  <% end %>
                </div>
                <small class="text-muted"><%= time_ago_in_words(review.created_at) %> ago</small>
              </div>
              <p class="mt-2 mb-0"><%= review.comment %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="sticky-top" style="top: 20px;">
        <div class="map-container rounded-3 shadow-lg"
             data-controller="map"
             data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
             data-map-markers-value="<%= @markers.to_json %>"
             style="height: 600px; width: 100%;">
        </div>

        <div class="mt-4 p-3 bg-light rounded">
          <h5><i class="fas fa-map-marker-alt text-danger"></i> Pickup Location</h5>
          <p class="mb-0"><%= @car.address %></p>
          <small class="text-muted">Exact address provided after booking</small>
        </div>
      </div>
    </div>
  </div>
</div>
