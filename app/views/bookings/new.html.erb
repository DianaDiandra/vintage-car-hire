<h1 class="text-center" style="margin: 40px;">Book <%= @car.brand %></h1>

<%= form_with model: [@car, @booking], html: { multipart: true, class: "cards" } do |f| %>
  <% if @booking.errors.any? %>
    <div class="errors" style="color: red;">
      <h3><%= pluralize(@booking.errors.count, "error") %> occurred:</h3>
      <ul>
        <% @booking.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :start_date %>
    </div>
    <div class="col-md-6">
      <%= f.date_field :start_date, min: Date.today, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :end_date %>
    </div>
    <div class="col-md-6">
      <%= f.date_field :end_date, min: Date.today, class: "form-control" %>
    </div>
  </div>


  <div class="text-center">
    <%= f.submit "confirm your booking", class: "button mt-3" %>
  </div>
<% end %>

<%= link_to "Back", car_path(@car) %>
