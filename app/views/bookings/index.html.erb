<h2>Your Bookings for <%= @car.brand %></h2>

<% @bookings.each do |booking| %>
  <div class="booking" style="border: 1px solid #ddd; padding: 10px; margin: 10px;">
    <p>
      <%= booking.start_date.strftime("%B %d, %Y") %>
      to
      <%= booking.end_date.strftime("%B %d, %Y") %>
    </p>
    <%= link_to "Edit Dates", edit_car_booking_path(@car, booking), class: "btn" %>
  </div>
<% end %>

<%= link_to "Back to Car", car_path(@car) %>
